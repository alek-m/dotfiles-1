#!/usr/bin/env bash
#
# pbrisbin 2013 - open files with the appropriate handler program.
#
###
file="$1"

[[ -z "$file" ]] && { printf "argument required\n" >&2; exit 1; }

if [[ $file =~ ^magnet: ]] && [[ "$file" =~ xt=urn:btih:([^&/]+) ]]; then
  printf "d10:magnet-uri${#file}:${file}e\n" > "$HOME/Downloads/meta-${BASH_REMATCH[1]}.torrent"
  exit 0
fi

if [[ ! -f "$file" ]]; then
  $BROWSER "$file" &>/dev/null &
  exit 0
fi

if ! which xdg-mime &>/dev/null; then
  printf "xdg-mime required\n" >&2
  exit 1
fi

read -r mimetype < \
  <(xdg-mime query filetype "$file" 2>/dev/null | cut -d ';' -f 1)

{
  case "$mimetype" in
    application/pdf) zathura "$file"  ;;
    application/ogg) mplayer "$file"  ;;
    audio/*)         mplayer "$file"  ;;
    video/*)         mplayer "$file"  ;;
    image/*)         mirage  "$file"  ;;
    text/*)          urxvtc -e vim "$file" ;;
    *)
      printf "%s: unmatched mimetype, %s\n" "$file" "$mimetype" >&2
      exit 1
      ;;
  esac
} &>/dev/null
