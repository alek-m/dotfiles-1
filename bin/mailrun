#!/bin/bash
#
# pbrisbin 2013 - spawn and monitor an offlineimap process.
#
###
monitor() {
  local pid=$1 i=0

  while ps $pid &>/dev/null; do
    if (( i++ > 5 )); then
      printf "Max checks reached. Sending SIGKILL to %s." "$pid" >&2
      kill -9 $pid; return 1
    fi

    sleep 10
  done

  return 0
}

read -r pid < ~/.offlineimap/pid

if ps $pid &>/dev/null; then
  printf "Process %s already running. Exiting." "$pid" >&2
  exit 1
fi

offlineimap -o -u quiet & monitor $!
