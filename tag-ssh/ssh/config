# vim: ft=sshconfig:

ControlMaster auto
ControlPath /tmp/ssh-%r@%h:%p

Host *
  ServerAliveInterval 120
  ServerAliveCountMax 5

Host blue.local
  Port 2222

Host black.local
  Port 2222

Host htpc.local
  User xbmc
  Port 2222

Host github.com
  IdentityFile ~/.ssh/id_rsa.github

Host git.upcase.com
  IdentityFile ~/.ssh/id_rsa.github

Host heroku.com
  IdentityFile ~/.ssh/id_rsa.heroku

Host nodester.com
  IdentityFile ~/.ssh/id_rsa.nodester
