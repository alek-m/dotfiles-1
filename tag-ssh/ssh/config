# vim: ft=sshconfig:

ControlMaster auto
ControlPath /tmp/ssh-%r@%h:%p

Host *
  ServerAliveInterval 120
  ServerAliveCountMax 5

Host loopback
  HostName localhost
  Port 2222
  IdentityFile ~/.ssh/id_rsa.loopback

Host blue.local
  Port 2222

Host black.local
  Port 2222

Host htpc.local
  User xbmc

Host github.com
  IdentityFile ~/.ssh/id_rsa.github

Host heroku.com
  IdentityFile ~/.ssh/id_rsa.heroku

Host heroku.personal
  HostName heroku.com
  IdentityFile ~/.ssh/id_rsa.heroku-personal
  IdentitiesOnly yes

Host nodester.com
  IdentityFile ~/.ssh/id_rsa.nodester
