# vim: ft=gitconfig
[core]
  editor = vim
  excludesfile = /home/patrick/.config/git/ignore
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[help]
  autocorrect = 1
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit --verbose
  co = checkout
  db = "!f() { git branch -d $1 && git push origin :$1 }; f"
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pr = !git push -u origin && gh pull-request
  st = status
  tg = "!f() { git tag -a -m $1 $1; }; f"
  up = !git fetch origin && git rebase origin/master
[merge]
  ff = only
[push]
  default = current
[status]
  branch = 1
  short = 1
[diff]
  mnemonicprefix = true
[url "git@github.com:pbrisbin/"]
  pushInsteadOf = "https://github.com/pbrisbin/"
[user]
  email = pbrisbin@gmail.com
  name = patrick brisbin
  signingkey = CEC8925D
[fetch]
  prune = true
[commit]
  gpgsign = true
