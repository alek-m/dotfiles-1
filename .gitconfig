[core]
  excludesfile = /home/patrick/.gitignore
  editor = vim
[merge]
  summary = true
  verbosity = 1
  tool = vimdiff
[color]
  ui = always
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow 
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status -sb
  di = diff
  dc = diff --cached
  aa = add --all
  tg = !sh -c 'git tag -a -m $1 $1' -
  spull = !git stash && git svn rebase && git stash apply
  spush = !git stash && git svn dcommit && git stash apply
[merge]
  tool = vimdiff
[push]
  default = tracking
[branch]
  autosetupmerge = true
  autosetuprebase = always
[diff]
  mnemonicprefix = true

[url "git@github.com:pbrisbin/"]
  pushInsteadOf = "https://github.com/pbrisbin/"
