[core]
  editor = vim
  excludesfile = /home/patrick/.gitignore
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[help]
  autocorrect = 1
[alias]
  aa = add --all
  ap = add --patch
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pr = !git pull-request
  st = status --short --branch
  tg = !sh -c 'git tag -a -m $1 $1' -
  up = !git fetch origin && git rebase origin/master
  in = !git up -i && git push -f && git checkout master && git pull && git merge -
[merge]
  ff = only
  tool = vimdiff
[push]
  default = upstream
[diff]
  mnemonicprefix = true

[url "git@github.com:pbrisbin/"]
  pushInsteadOf = "https://github.com/pbrisbin/"
