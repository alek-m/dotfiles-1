# vim: ft=msmtp

account gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
from pbrisbin@gmail.com
user pbrisbin@gmail.com
passwordeval echo $GMAIL_PASSWORD
tls on
tls_nocertcheck

account thoughtbot
host smtp.gmail.com
port 587
protocol smtp
auth on
from pat@thoughtbot.com
user pat@thoughtbot.com
passwordeval echo $THOUGHTBOT_MSMTP_PASSWORD
tls on
tls_nocertcheck

account default : gmail
